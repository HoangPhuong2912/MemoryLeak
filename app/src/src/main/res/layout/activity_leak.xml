<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/leak_singleton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="singleton context leak"
        android:textColor="#000"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="15dp"
        android:background="#f00"
        android:layout_gravity="center"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/leak_static"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="static leak"
        android:textColor="#000"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="15dp"
        android:background="#f00"
        android:layout_gravity="center"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/leak_static_innerclass"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="innerclass call leak"
        android:textColor="#000"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="15dp"
        android:background="#f00"
        android:layout_gravity="center"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/leak_thread"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="#f00"
        android:gravity="center"
        android:padding="15dp"
        android:text="thread call leak"
        android:textColor="#000"
        android:textSize="16sp" />
</LinearLayout>